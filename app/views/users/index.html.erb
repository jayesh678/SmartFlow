<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>List of Users</title>
  <%= stylesheet_link_tag 'styles', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<body>

<h1>List of Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Role</th>
      <th>Company</th>
      <th>Actions </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.role.role_name %></td>
        <td><%= user.company.company_name %></td>
        <td>
        
          <%= link_to 'View', user, class: 'button' %>

          <% if can? :update, User %>
          <%= link_to 'Edit', edit_user_path(@user), class: 'button' %>
          <% end %>
          <% if can? :update, User %>
          <%= link_to 'Destroy', user, class: 'button', data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
          } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :update, User %>
  <div style="margin-top: 20px;">
    <%= link_to 'New User', new_user_path, class: 'button' %>
  </div>
<% end %>

</body>
</html>