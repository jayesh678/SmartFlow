<%= form_for(current_user, url: process_company_code_path, method: :post) do |f| %>
    <div class="field">
      <%= f.label :company_code %>
      <%= f.text_field :company_code %>
    </div>
    <div class="actions">
      <%= f.submit "Submit Company Code" %>
    </div>
  
    <% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
  <% end %>

  <% if flash[:alert] %>
  <p class="alert"><%= flash[:alert] %></p>
  <% end %>
  <% end %>
  